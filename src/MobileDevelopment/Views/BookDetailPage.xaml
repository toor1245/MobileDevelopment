<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileDevelopment.Views.BookDetailPage">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Title:" FontSize="Medium" />
        <Label Text="{Binding Title}" FontSize="Small"/>
        <Label Text="SubTitle:" FontSize="Medium" />
        <Label Text="{Binding SubTitle}" FontSize="Small"/>
        <Label Text="Isbn13:" FontSize="Medium" />
        <Label Text="{Binding Isbn13}" FontSize="Small"/>
        <Label Text="Price:" FontSize="Medium" />
        <Label Text="{Binding Price}" FontSize="Small"/>
    </StackLayout>
</ContentPage>